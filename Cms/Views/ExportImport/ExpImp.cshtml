@model Cms.Models.ImportModel
@{
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
    ViewBag.Title = "Export/Import";

    var statusProducts = Request["SuccesProducts"];
    var statusOrders = Request["SuccesOrders"];
    var statusUsers = Request["SuccesUsers"];

}

<h2>Objednávky</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Export</strong></h3>
                <p class="card-text">Stlačením tlačidla vykonáte export všetkých objednávok zo systému do excel dokumentu.</p>
                <button onclick="DownloadExcelOrders()" class="btn  btn-success" style="margin-top:20px;">Exportovať</button>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Import</strong></h3>
                <!--<p class="card-text">Stlačením tlačidla vykonáte import do systému.</p>-->
                <p class="card-text">Import používateľov momentálne nie je možný.</p>
                <button onclick="" class="btn btn-success" style="margin-top:20px;" disabled>Importovať</button>
            </div>
        </div>
    </div>
</div>
<br />
<h2>Produkty</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Export</strong></h3>
                <p class="card-text">Stlačením tlačidla vykonáte export všetkých produktov zo systému do excel dokumentu.</p>
                <button onclick="DownloadExcelProducts()" class="btn  btn-success" style="margin-top:20px;">Exportovať</button>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Import</strong></h3>
                @if (statusProducts == "1")
                {
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Import úspešný!</h4>
                        <p>Všetky dáta úspešne nainportované do systému. Importované položky nájdete v zozname všetkých produktov.</p>
                        <hr />
                        <a href="@Url.Action("Products", "Admin")" style="color: #000;"><u>&larr; Prejsť na zoznam produktov</u></a>
                    </div>
                }
                <p class="card-text">Stlačením tlačidla vykonáte import do systému.</p>
                <button onclick="" class="btn btn-success" style="margin-top:20px;" data-toggle="modal" data-target="#importProducts">Importovať</button>
            </div>
        </div>
    </div>
</div>

<div class="form-horizontal">
    <div class="modal fade" id="importProducts" tabindex="-1" role="dialog" aria-labelledby="importProductsTitle" aria-hidden="true">
        @using (Html.BeginForm("ImportProducts", "ExportImport", FormMethod.Post, new { enctype = "multipart/form-data", id = "productForm" }))
        {
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="importProductsTitle">Importovať produkty zo súboru</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <!--<input type="file" name="UploadedFileProducts" class="custom-file-input" id="customFile"/>-->
                            @Html.CheckBoxFor(m => m.Presta, new { @class = "form-control", id = "presta" }) Importujem produkty zo systému PrestaShop
                            @Html.TextBoxFor(m => m.File, "UploadedFileProducts", new { @type = "file", @class = "form-control-file", @accept = "xls|xlsx|csv", @id = "customFile" })

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvoriť</button>
                        <input type="submit" name="Submit" class="btn btn-primary" value="Importovať" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<br />
<h2>Používatelia</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Export</strong></h3>
                <p class="card-text">Stlačením tlačidla vykonáte export všetkých používateľov zo systému do excel dokumentu.</p>
                <button onclick="DownloadExcelUsers()" class="btn  btn-success" style="margin-top:20px;">Exportovať</button>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><strong>Import</strong></h3>
                @if (statusUsers == "1")
                {
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Import úspešný!</h4>
                        <p>Všetky dáta úspešne nainportované do systému. Importované položky nájdete v zozname všetkých používateľov.</p>
                        <hr />
                        <a href="@Url.Action("Users", "Admin")" style="color: #000;"><u>&larr; Prejsť na zoznam používateľov</u></a>
                    </div>
                }
                <!--<p class="card-text">Stlačením tlačidla vykonáte import do systému.</p>-->
                <p class="card-text">Import používateľov momentálne nie je možný.</p>
                <button onclick="" class="btn btn-success" style="margin-top:20px;" data-toggle="modal" data-target="#importUsers" disabled>Importovať</button>
            </div>
        </div>
    </div>
</div>


<div class="form-horizontal">
    <div class="modal fade" id="importUsers" tabindex="-1" role="dialog" aria-labelledby="importUsersTitle" aria-hidden="true">
        @using (Html.BeginForm("ImportUsers", "ExportImport", FormMethod.Post, new { enctype = "multipart/form-data", id = "usersForm" }))
        {
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="importUsersTitle">Importovať používateľov zo súboru</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <!--<input type="file" name="UploadedFileProducts" class="custom-file-input" id="customFile"/>-->

                            @Html.TextBox("UploadedFileUsers", "", new { @type = "file", @class = "form-control-file", @accept = "xls|xlsx", @id = "customFile" })

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvoriť</button>
                        <input type="submit" name="Submit" class="btn btn-primary" value="Importovať" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>

    function DownloadExcelOrders() {
        $.ajax({
            type: "POST",
            url: "/ExportImport/ExcelExportOrders",
            cache: false,
            success: function (data) {
                window.location = '/ExportImport/DownloadOrders';
            },
            error: function (data) {
                Materialize.toast("Something went wrong. ", 3000, 'rounded');
            }
        });
    }

    function DownloadExcelProducts() {
        $.ajax({
            type: "POST",
            url: "/ExportImport/ExcelExportProducts",
            cache: false,
            success: function (data) {
                window.location = '/ExportImport/DownloadProducts';
            },
            error: function (data) {
                Materialize.toast("Something went wrong. ", 3000, 'rounded');
            }
        });
    }

    function DownloadExcelUsers() {
        $.ajax({
            type: "POST",
            url: "/ExportImport/ExcelExportUsers",
            cache: false,
            success: function (data) {
                window.location = '/ExportImport/DownloadUsers';
            },
            error: function (data) {
                Materialize.toast("Something went wrong. ", 3000, 'rounded');
            }
        });
    }

</script>
