<div class="col-12 filter-container">
    <div class="form-group">
        <div class="row">

            @if (ViewData["znacka"] != null && ViewData["pageType"] != "brand")
            {
                <div class="col-lg-2 col-md-6 px-2" style="text-align: left; display: inline-block;">
                    <div>
                        <small>
                            <strong>
                                @Html.Label("Výrobca:", htmlAttributes: new { @class = "control-label col-md-12 px-0" })
                            </strong>
                        </small>
                        @Html.DropDownList("Výrobca", (IEnumerable<SelectListItem>)ViewData["znacka"], new { @class = "form-control productfilter", id = "Vyrobca" })
                    </div>
                </div>
            }
            @if (ViewData["typ"] != null && ViewData["pageType"] != "type")
            {
                <div class="col-lg-2 col-md-6 px-2" style="text-align: left; display: inline-block;">
                    <div>
                        <small><strong>@Html.Label("Typ rybolovu:", htmlAttributes: new { @class = "control-label col-md-12 px-0" })</strong></small>
                        @Html.DropDownList("Typ", (IEnumerable<SelectListItem>)ViewData["typ"], new { @class = "form-control productfilter" })
                    </div>
                </div>
            }
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 px-2 pl-4 range-container pricerange" style="text-align: left; display: inline-block;">
                <div class="pt-2 pl-1">
                    <small>
                        <strong>Cena od - do:</strong>
                    </small>
                    <div class="range">
                        <small class="pr-3">0 €</small> <input id="ex3" type="text" class="span2 productfilter" value="" data-slider-min="0" data-slider-max="@maxPrice.ToString()" data-slider-step="10" data-slider-value="[0,@maxPrice.ToString()]" /> <small class="pl-3">@maxPrice.ToString() €</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-6 najnizsiacena d-md-none d-lg-none">
                <div class="sortbyprice" style="cursor:pointer;">
                    <small><strong>Najnižšia cena</strong></small><i style="margin-left: 5px;vertical-align: middle;" class="fas fa-chevron-down"></i>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 px-2 pl-4 filterleftpadding" style="text-align: left; display: inline-block;">
                <div class="pt-4 row justify-content">
                    <div class="col-auto">
                        <input class="form-check-input productfilter" type="checkbox" value="" id="skladom">
                        <label class="form-check-label" for="skladom">
                            <small><strong>Skladom</strong></small>
                        </label>
                    </div>

                    <div class="col-auto">
                        <input class="form-check-input productfilter" type="checkbox" value="" id="novinky">
                        <label class="form-check-label" for="novinky">
                            <small><strong>Novinky</strong></small>
                        </label>
                    </div>
                    <div class="col-auto">
                        <input class="form-check-input productfilter" type="checkbox" value="" id="vypredaj">
                        <label class="form-check-label" for="vypredaj">
                            <small><strong>Výpredaj</strong></small>
                        </label>
                    </div>
                    <div class="col-auto">
                        <input class="form-check-input productfilter" type="checkbox" value="" id="akcie">
                        <label class="form-check-label" for="akcie">
                            <small><strong>Akcia</strong></small>
                        </label>
                    </div>
                    <div class="col-auto najnizsiacena d-none d-md-block">
                        <div class="sortbyprice" style="cursor:pointer;">
                            <small><strong>Najnižšia cena</strong></small><i style="margin-left: 5px;vertical-align: middle;" class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 px-2" style="text-align: left; display: inline-block;">
                <div>
                    <div class="pt-3">
                            <small id="resetfilter" style="cursor:pointer;display:none;"><img src="~/Content/images/red-x.svg" width="20px"/> <strong>Resetovať filter</strong></small>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

