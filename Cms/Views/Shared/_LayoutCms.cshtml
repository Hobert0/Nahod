    <script>
        /* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var dropdown2 = document.getElementsByClassName("dropdown-btn2");
        var i;
        var j;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
        for (j = 0; j < dropdown2.length; j++) {
            dropdown2[j].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdown2Content = this.nextElementSibling;
                if (dropdown2Content.style.display === "block") {
                    dropdown2Content.style.display = "none";
                } else {
                    dropdown2Content.style.display = "block";
                }
            });
        }

        $(document).ready(function () {
            $('#myTable').DataTable({
                "order": [[0, "desc"]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Slovak.json"
                }
            });
        });

        $(function () {
            var pageUrl = location.href;
            $('.tab a').each(function () {
                if (this.href === pageUrl) {
                    $(this).parent('li').toggleClass('active');
                    $(this).closest('ul').closest('li').toggleClass('active');
                }
            });
        })




    </script>
